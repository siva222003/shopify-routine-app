<div>
  <div
    x-cloak
    x-show="isMarkCompleteModalOpen"
    x-transition.opacity.duration.200ms
    x-trap.inert.noscroll="isMarkCompleteModalOpen"
    @keydown.esc.window="isMarkCompleteModalOpen = false"
    @click.self="isMarkCompleteModalOpen = false"
    class="fixed inset-0 z-30 flex items-end justify-center  p-4 pb-8 backdrop-contrast-50   sm:items-center lg:p-8"
    role="dialog"
    aria-modal="true"
    aria-labelledby="defaultModalTitle"
  >
    <!-- Modal Dialog -->
    <div
      x-show="isMarkCompleteModalOpen"
      x-transition:enter="transition ease-out duration-200 delay-100 motion-reduce:transition-opacity"
      x-transition:enter-start="opacity-0 scale-50"
      x-transition:enter-end="opacity-100 scale-100"
      class="flex max-w-xl flex-col gap-4 overflow-hidden rounded-xl  bg-white"
    >
      <div class=" flex flex-col items-center gap-7 rounded-4xl px-[60px] h-[340px] justify-center  ">
        <div class="flex gap-2">
          <img src="{{ 'reminder-clock.svg' | asset_url }}" width="" height="" alt="">
          <h1 class="text-primaryGreen">18 min left</h1>
        </div>

        <div class="flex flex-col items-center">
          <h1 class="text-[14px] text-primaryBlack">Amrutam Skinkey Malt</h1>
          <h2 class="text-[14px] text-primaryGrey">Skin Care Routine</h2>
        </div>

        <div class="flex flex-col gap-3 ">
          <h1 class="text-primaryBlack text-[14px]">Usage Quantity: 1 tbs</h1>

          <div class="flex gap-4 items-center justify-center">
            <div class="border border-primaryGrey px-3 py-3 rounded-full  ">
              <h2 class="text-primaryGrey text-[12px]">Before Meal</h2>
            </div>

            <h2 class="text-primaryGrey text-[12px]">10AM</h2>
          </div>
        </div>

        <div class="flex flex-col gap-4">
          <button
            @click="
              isMarkCompleteModalOpen = false
              isRemindedCompleteModalOpen = true
            "
            class="bg-primaryGreen w-[220px] py-5 rounded-xl "
          >
            <h1
              class="text-white text-[11px] font-[500] "
            >
              Mark as Complete
            </h1>
          </button>

          <button
            @click="isMarkCompleteModalOpen = false"
            class="border border-primaryGreen w-[220px] py-5 rounded-xl"
          >
            <h1 class="text-primaryGreen font-[500] text-[11px]">Snooze for 10min</h1>
          </button>
        </div>

        <button
          @click="isMarkCompleteModalOpen = false"
          class="font-[500] text-primaryGreen text-[11px] "
        >
          Skip for today
        </button>
      </div>
    </div>
  </div>
</div>
