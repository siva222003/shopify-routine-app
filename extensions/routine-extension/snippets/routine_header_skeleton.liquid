<style>
  .skeleton {
    background-color: #fff7e2 !important;
    animation: pulse 1.5s infinite ease-in-out;
  }

  @keyframes pulse {
    0% {
      background-color: #f5f5f5 !important;
    }
    50% {
      background-color: #e0e0e0 !important;
    }
    100% {
      background-color: #f5f5f5 !important;
    }
  }
</style>

<section id="routine-skeleton" class="rounded-2xl mx-2 ssm:mx-4 sm:mx-6">
  <section class="flex max-md:flex-col max-md:items-center md:justify-center my-10 gap-10 md:gap-6 lg:gap-14">
    <!-- Routine Thumbnail -->
    <div
      style="aspect-ratio: 1/1;"
      class="relative rounded-2xl flex justify-center items-center bg-primaryCream max-md:w-[97vw] md:h-[33rem] md:w-[33rem] lg:h-[47rem] lg:w-[47rem] lMd:h-[40rem] lMd:w-[40rem] xl:h-[50rem] xl:w-[50rem] "
    >
      <svg
        width="100px"
        height="100px"
        viewBox="0 0 187.3 93.7"
        preserveAspectRatio="xMidYMid meet"
        style="left: 50%; top: 50%; position: absolute; transform: translate(-50%, -50%) matrix(1, 0, 0, 1, 0, 0);"
      >
        <!-- Background path -->
        <path
          id="outline-bg"
          opacity="0.05"
          fill="none"
          stroke="#FFF7E2"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-miterlimit="10"
          d="M93.9,46.4c9.3,9.5,13.8,17.9,23.5,17.9s17.5-7.8,17.5-17.5s-7.8-17.6-17.5-17.5c-9.7,0.1-13.3,7.2-22.1,17.1 c-8.9,8.8-15.7,17.9-25.4,17.9s-17.5-7.8-17.5-17.5s7.8-17.5,17.5-17.5S86.2,38.6,93.9,46.4z"
        />

        <!-- Animated path -->
        <path
          id="outline"
          fill="none"
          stroke="#3A643B"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-miterlimit="10"
          stroke-dasharray="150 50"
          stroke-dashoffset="0"
          d="M93.9,46.4c9.3,9.5,13.8,17.9,23.5,17.9s17.5-7.8,17.5-17.5s-7.8-17.6-17.5-17.5c-9.7,0.1-13.3,7.2-22.1,17.1 c-8.9,8.8-15.7,17.9-25.4,17.9s-17.5-7.8-17.5-17.5s7.8-17.5,17.5-17.5S86.2,38.6,93.9,46.4z">
          <animate
            attributeName="stroke-dashoffset"
            from="0"
            to="-200"
            dur="1s"
            repeatCount="indefinite"
          />
        </path>
      </svg>
    </div>

    <div class="flex flex-col gap-[1.5rem] max-md:mx-3">
      <div class="skeleton rounded-2xl" style="height: 1.5rem;"></div>

      <div class="flex flex-col gap-2">
        <div class="skeleton h-[10px] rounded-2xl "></div>
        <div class="skeleton h-[10px] rounded-2xl"></div>
        <div class="skeleton h-[10px] w-[50%] rounded-2xl"></div>
      </div>

      <!-- Weeks, Type, Created -->
      <div class="flex gap-4 w-fit">
        <div class="w-[70px] h-[85px]  rounded-xl bg-[#fff7e2]"></div>

        <div class="w-[70px] h-[85px]  rounded-xl bg-[#fff7e2] "></div>
        <div class="w-[70px] h-[85px]  rounded-xl bg-[#fff7e2] "></div>
      </div>

      <!-- Products Used -->
      <div class="flex md:w-[50rem] lg:w-[60rem] w-[93vw] flex-col mt-[16px] ">
        {% for item in (1..3) %}
          <div>
            <div class="flex gap-[10px] sm:gap-[20px]">
              <div class="skeleton w-[80px] h-[80px] rounded-2xl"></div>
              <div class="flex flex-col gap-2 sm:gap-4">
                <div class="skeleton w-[30vw] h-[10px] rounded-2xl"></div>
                <div class="skeleton w-[15vw] h-[10px]  rounded-2xl"></div>
                <div class="skeleton w-[80px] my-4 h-[25px]  rounded-2xl"></div>
              </div>
            </div>

            <!-- Border div inside each product iteration -->
            <div style="border-top: 1px solid #D0D0D0;" class="sm:w-full my-[20px]"></div>
          </div>
        {% endfor %}
      </div>

      <!-- Description & Weekly Benefits -->
      <div
        class="flex flex-col gap-1 h-[30rem] px-[20px] md:w-[50rem] lg:w-[60rem] bg-primaryCream md:px-[18px] lg:px-[24px] py-[22px] rounded-2xl w-[93vw]"
      ></div>
    </div>
  </section>
</section>
