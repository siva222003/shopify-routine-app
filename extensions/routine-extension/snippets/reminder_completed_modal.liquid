<div>
  {% comment %}
    <button
      @click="modalIsOpen = true"
      type="button"
      class="cursor-pointer whitespace-nowrap rounded-md bg-black px-4 py-2 text-center text-sm font-medium tracking-wide text-neutral-100 transition hover:opacity-75 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:opacity-100 active:outline-offset-0 dark:bg-white dark:text-black dark:focus-visible:outline-white"
    >
      Open Modal
    </button>
  {% endcomment %}
  <div
    x-cloak
    x-show="isRemindedCompleteModalOpen"
    x-transition.opacity.duration.200ms
    x-trap.inert.noscroll="isRemindedCompleteModalOpen"
    @keydown.esc.window="isRemindedCompleteModalOpen = false"
    @click.self="isRemindedCompleteModalOpen = false"
    class="fixed inset-0 z-30 flex items-end justify-center  p-4 pb-8 backdrop-contrast-50   sm:items-center lg:p-8"
    role="dialog"
    aria-modal="true"
    aria-labelledby="defaultModalTitle"
  >
    <!-- Modal Dialog -->
    <div
      x-show="isRemindedCompleteModalOpen"
      x-transition:enter="transition ease-out duration-200 delay-100 motion-reduce:transition-opacity"
      x-transition:enter-start="opacity-0 scale-50"
      x-transition:enter-end="opacity-100 scale-100"
      class="flex max-w-xl flex-col gap-4 overflow-hidden rounded-xl  bg-primaryCream"
    >
      <div class=" flex flex-col items-center gap-7 rounded-4xl px-[60px] h-[340px] justify-center ">
        <div class="flex flex-col items-center  gap-2">
          <img src="{{ 'mark-completed-tick.svg' | asset_url }}" class="w-16" width="" height="" alt="">
          <h1 class="text-primaryGreen text-[16px]">Completed</h1>
        </div>

        <h1 class="text-[13px]">You are doing amazingly good.</h1>

        <div class="flex flex-col items-center">
          <h1 class="text-[15px] text-primaryBlack">Amrutam Skinkey Malt</h1>
          <h2 class="text-[15px] text-primaryGreen">Skin Care Routine</h2>
        </div>

        <div class="flex gap-4 items-center justify-center">
          <div class="border border-primaryBlack px-3 py-3 rounded-full  ">
            <h2 class="text-priborder-primaryBlack text-[12px]">Before Meal</h2>
          </div>

          <h2 class="text-priborder-primaryBlack text-[12px]">10AM</h2>
        </div>
      </div>
    </div>
  </div>
</div>
