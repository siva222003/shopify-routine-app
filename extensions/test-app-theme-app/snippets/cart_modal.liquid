<div>
  <div
    x-cloak
    x-show="cartModalOpen"
    x-transition.opacity.duration.200ms
    x-trap.inert.noscroll="modalIsOpen"
    @keydown.esc.window="modalIsOpen = false"
    @click.self="modalIsOpen = false"
    class="fixed inset-0 z-30 flex items-end justify-center bg-black/20 p-4 pb-8 backdrop-blur-md sm:items-center lg:p-8"
    role="dialog"
    aria-modal="true"
    aria-labelledby="defaultModalTitle"
  >
    <!-- Modal Dialog -->
    <div
      x-show="cartModalOpen"
      x-transition:enter="transition ease-out duration-200 delay-100 motion-reduce:transition-opacity"
      x-transition:enter-start="opacity-0 scale-50"
      x-transition:enter-end="opacity-100 scale-100"
      class="flex max-w-xl flex-col gap-4 px-6 py-4 overflow-hidden rounded-md border border-neutral-300 bg-white "
    >
      <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
        <div class="sm:flex sm:items-start">
          <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left flex flex-col gap-4">
            <h3 class="text-4xl font-semibold leading-6 text-gray-900" id="modal-title">Add To Cart</h3>
            <div class="mt-2">
              <p class="text-xl text-gray-500">Are you sure you have 50% of products?</p>
            </div>
          </div>
        </div>
      </div>

      <div class="px-4 py-5 sm:flex sm:flex-col gap-4 sm:px-6">
        <button
          type="button"
          @click="changeTab(tab+1,true)"
          class="w-full justify-center rounded-md bg-[#3A643B] hover:bg-[#4c834c] px-3 py-4 text-xl font-semibold text-white shadow-xl  sm:w-auto"
        >
          Yes,I have
        </button>
        <button
          type="button"
          @click="cartModalOpen = false"
          class="mt-3 w-full justify-center rounded-md bg-white px-3 py-4 text-xl font-semibold text-[#3A643B] shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50  sm:w-auto"
        >
          No, I will add more
        </button>
      </div>
    </div>
  </div>
</div>
