  <section x-data="routineList" class="py-12 bg-white sm:py-16 lg:py-20 px-16">
    <div class="px-4 mx-auto sm:px-6 lg:px-8 ">
      <div class="max-w-xl mx-auto text-center">
        <h2 class="text-2xl font-bold text-gray-900 sm:text-6xl">Routines</h2>
        <p class="mt-4 text-2xl font-normal leading-7 text-gray-600">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Purus faucibus massa dignissim tempus.
        </p>
      </div>
      <div class="grid grid-cols-2 gap-6 mt-10 lg:mt-16 lg:gap-7 lg:grid-cols-3">
        <template x-for="routine in routines">
          <a :href="`/pages/routine?id=${routine._id}`">
            <div class="relative group">
              <div class="overflow-hidden aspect-w-1 aspect-h-1">
                <img
                  height="200"
                  width="200"
                  class="object-cover w-[100%] h-[100%] transition-all duration-300 group-hover:scale-125"
                  {% comment %} src="https://cdn.rareblocks.xyz/collection/clarity-ecommerce/images/item-cards/4/product-1.png" {% endcomment %}
                  :src="routine.image"
                  alt=""
                >
              </div>
              <div class="absolute left-3 top-3">
                <p class="sm:px-3 sm:py-1.5 px-1.5 py-1 text-[8px] sm:text-xs font-bold tracking-wide text-gray-900 uppercase bg-white rounded-[100%]">
                  New
                </p>
              </div>

              <div class="flex items-start justify-between mt-4 space-x-4">
                <div>
                  <h3 class="text-xs font-bold text-gray-900 sm:text-sm md:text-base">
                    <h1 x-text="routine.name">
                      <span class="absolute inset-0" aria-hidden="true"></span>
                    </h1>
                  </h3>
                </div>
              </div>
            </div>
          </a>
        </template>
      </div>
    </div>

    {% comment %} <button onclick="addProduct()" class="bg-red-500 text-white px-4 py-2 rounded-lg">Send</button> {% endcomment %}
  </section>

  <script src="{{ 'routine-list.js' | asset_url }}" defer="defer"></script>
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.14.1/dist/cdn.min.js" defer="defer"></script>

  {% schema %}
  {
    "name": "Routine List",
    "target": "section"
  }
  {% endschema %}
