{% comment %}
  <link rel="stylesheet" href="{{ 'style.css' | asset_url }}">

  {% render 'routine_header' %}

  {% render 'routine_reminders' %}

  {% schema %}
  {
    "name": "Routine",
    "target": "section"
  }
  {% endschema %}

  <script src="{{ 'routine.js' | asset_url }}" defer="defer"></script>
{% endcomment %}

<link rel="stylesheet" href="{{ 'style.css' | asset_url }}">

<div id="ezy__epqoverview27-modal">
  <div
    class="bg-white  text-zinc-900  overflow-hidden relative max-w-[90vw] sm:max-w-[80vw] md:max-w-[60vw] lg:max-w-full rounded mx-auto my-14"
  >
    <button
      type="button"
      id="ezy__epqoverview27-close-btn"
      class="absolute right-0 top-0 mt-4 mr-4 z-50"
    >
      <i class="fas fa-times text-xl"></i>
    </button>
    <div class="grid grid-cols-12 gap-6 lg:gap-10 p-4 lg:p-8">
      <div class="col-span-12 lg:col-span-5">
        <div class="h-full">
          <div
            class="bg-gray-100  rounded flex justify-center items-center p-6"
          >
            <img
              src="https://cdn.easyfrontend.com/pictures/ecommerce/product-1.png"
              alt=""
              class="max-w-full h-auto"
            >
          </div>
          <div class="text-center">
            <button
              class="text-blue-600 w-full py-3 px-4 border-0 mt-12 lg:mt-6 font-bold"
            >
              View full Details
            </button>
          </div>
        </div>
      </div>
      <div class="col-span-12 lg:col-span-7">
        <div>
          <h4 class="text-2xl font-bold mb-2">Two Wheel Rocking Chair</h4>

          <div class="my-6 flex items-center">
            <h4 class="text-2xl font-medium">$192</h4>
            <span class="mx-4">|</span>
            <span class="text-yellow-500">
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star-half-alt"></i>
            </span>
          </div>

          <div class="my-6 flex items-center">
            <i class="fas fa-check text-blue-600 mr-2"></i>
            <p class="font-bold opacity-60">In stock and ready to ship</p>
          </div>

          <div class="my-6">
            <h5 class="text-xl font-medium mb-2">Size</h5>
            <div class="flex gap-2 mb-2">
              <input type="radio" class="absolute hidden" checked="">
              <label
                class="border-2 border-blue-600 cursor-pointer rounded-md flex flex-col overflow-hidden text-start px-4 py-3"
              >
                <b class="mb-2">18L</b>
                <span class="opacity-75 mb-2">Perfect for a reasonable amount of snacks.</span>
              </label>

              <input type="radio" class="absolute hidden" checked="">
              <label
                class="border-2 border-gray-100  hover:border-blue-600  cursor-pointer rounded-md flex flex-col overflow-hidden text-start px-4 py-3"
              >
                <b class="mb-2">20L</b>
                <span class="opacity-75 mb-2">Perfect for a reasonable amount of snacks.</span>
              </label>
            </div>
            <a class="font-medium opacity-75" href="#!"
              >What size should I buy? <i class="fas fa-question-circle ml-2"></i
            ></a>
          </div>

          <button
            class="text-white bg-blue-600 hover:bg-opacity-90 w-full rounded py-3 px-4 mt-6"
          >
            Add To Bag
          </button>
          <h5 class="w-full text-center mt-4 opacity-75 text-xl">
            <i class="fas fa-check-circle mr-2"></i> Lifetime Gurantee
          </h5>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const ePQO27BTN = document.getElementById('ezy__epqoverview27-modal-btn');
  const ePQO27Modal = document.getElementById('ezy__epqoverview27-modal');
  const ePQO27Cls = document.getElementById('ezy__epqoverview27-close-btn');

  ePQO27BTN.addEventListener('click', () => {
    ePQO27Modal.style.display = 'block';
  });
  ePQO27Cls.addEventListener('click', () => {
    ePQO27Modal.style.display = 'none';
  });
</script>

{% schema %}
{
  "name": "Routine",
  "target": "section"
}
{% endschema %}
